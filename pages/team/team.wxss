.container {
  padding: var(--spacing-lg);
  min-height: 100vh;
  background: var(--bg-page);
}

.card {
  background: var(--bg-card);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-md);
}

.team-card {
  border: 1rpx solid #E6F0FF;
}

.team-header {
  display: flex;
  flex-direction: column;
  margin-bottom: 16rpx;
}

.team-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.team-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.team-subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
}

.switch-personal {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #357ABD;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: #E8F4FD;
  color: #357ABD;
  font-size: 22rpx;
}

.link {
  color: #357ABD;
  margin-left: 12rpx;
}

.team-actions {
  display: flex;
  gap: 12rpx;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #FFFFFF;
}

.btn:active {
  opacity: 0.9;
}

.mini-btn {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  background: #E8F4FD;
  color: #357ABD;
  border-radius: 12rpx;
}

.mini-btn.danger {
  background: #FFF1F0;
  color: #D93025;
}

.team-buttons {
  display: flex;
  gap: 12rpx;
  align-items: center;
  margin-bottom: 12rpx;
}

.inline-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 12rpx;
  flex-wrap: wrap;
}

.team-name-input {
  flex: 1;
  height: 72rpx;
  border-radius: 12rpx;
  padding: 0 20rpx;
  background: #F5F7FA;
  font-size: 28rpx;
  border: 1rpx solid #E6E6E6;
}

.invite-row {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.invite-input {
  flex: 1;
  height: 72rpx;
  border-radius: 12rpx;
  padding: 0 20rpx;
  background: #F5F7FA;
  font-size: 28rpx;
  border: 1rpx solid #E6E6E6;
}

.join-btn {
  min-width: 140rpx;
}

.team-tip {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #888888;
  line-height: 1.6;
}

.team-tabs {
  display: flex;
  background: #F5F7FA;
  border-radius: 12rpx;
  margin: 16rpx 0;
  overflow: hidden;
}

.team-tabs .tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #666666;
}

.team-tabs .tab.active {
  background: #E8F4FD;
  color: #357ABD;
  font-weight: 600;
}

.section {
  margin-top: 8rpx;
}

.section-title {
  font-size: 26rpx;
  color: #333333;
  margin: 12rpx 0;
  font-weight: 600;
}

.block-btn {
  width: 100%;
  margin: 8rpx 0;
}

.ghost-btn {
  background: #F5F7FA;
  color: #357ABD;
}

.ghost-btn.danger {
  background: #FFF1F0;
  color: #D93025;
}

.team-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.team-card-item {
  background: #F8FAFF;
  border: 1rpx solid #E6F0FF;
  border-radius: 12rpx;
  padding: 16rpx;
}

.team-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.team-item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.team-item-role {
  font-size: 24rpx;
  color: #4A90E2;
}

.team-item-row {
  font-size: 24rpx;
  color: #666666;
  margin: 4rpx 0;
}

.team-item-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 8rpx;
}

.empty-tip {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999999;
}

.member-list {
  margin-top: 16rpx;
  background: #F8FAFF;
  border: 1rpx solid #E6F0FF;
  border-radius: 12rpx;
  padding: 12rpx;
}

.member-title {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.member-item {
  font-size: 24rpx;
  color: #555555;
  padding: 6rpx 0;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.owner-tag {
  color: #D48806;
}

.scene-card {
  border: 1rpx solid #E6F0FF;
}

.scene-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12rpx;
  margin-top: 12rpx;
}

.scene-item {
  background: #F8FAFF;
  border: 1rpx solid #E6F0FF;
  border-radius: 12rpx;
  padding: 16rpx;
}

.scene-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.scene-desc {
  margin: 8rpx 0 12rpx;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

