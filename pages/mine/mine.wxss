.container {
  padding: 24rpx;
  min-height: 100vh;
  background: #F5F5F5;
}

.card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.profile-card {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #FFFFFF;
  font-size: 48rpx;
}

.profile-info .title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
}

.profile-info .subtitle {
  margin-top: 6rpx;
  font-size: 26rpx;
  color: #888888;
}

.setting-card {
  border: 1rpx solid #E6F0FF;
}

.setting-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.setting-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
}

.setting-value {
  font-size: 26rpx;
  color: #4A90E2;
}

.setting-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #888888;
}

.save-btn {
  margin-top: 24rpx;
}

.info-card {
  border: 1rpx solid #F0F0F0;
}

.info-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.7;
  margin-bottom: 10rpx;
}

.test-btn {
  margin-top: 16rpx;
}

.subscribe-btn {
  margin-top: 16rpx;
}

.send-btn {
  margin-top: 16rpx;
}

.team-card {
  border: 1rpx solid #E6F0FF;
}

.team-header {
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.team-name-input {
  flex: 1;
  height: 72rpx;
  border-radius: 12rpx;
  padding: 0 20rpx;
  background: #F5F7FA;
  font-size: 28rpx;
  border: 1rpx solid #E6E6E6;
}

.team-tabs {
  display: flex;
  background: #F5F7FA;
  border-radius: 12rpx;
  margin: 16rpx 0;
  overflow: hidden;
}

.team-tabs .tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #666666;
}

.team-tabs .tab.active {
  background: #E8F4FD;
  color: #357ABD;
  font-weight: 600;
}

.team-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.team-card-item {
  background: #F8FAFF;
  border: 1rpx solid #E6F0FF;
  border-radius: 12rpx;
  padding: 16rpx;
}

.team-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.team-item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.team-item-role {
  font-size: 24rpx;
  color: #4A90E2;
}

.team-item-row {
  font-size: 24rpx;
  color: #666666;
  margin: 4rpx 0;
}

.team-item-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 8rpx;
}

.empty-tip {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999999;
}

.team-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.team-subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
}

.team-actions {
  display: flex;
  gap: 12rpx;
}

.mini-btn {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  background: #E8F4FD;
  color: #357ABD;
  border-radius: 12rpx;
}

.mini-btn.danger {
  background: #FFF1F0;
  color: #D93025;
}

.team-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.invite-row {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.invite-input {
  flex: 1;
  height: 72rpx;
  border-radius: 12rpx;
  padding: 0 20rpx;
  background: #F5F7FA;
  font-size: 28rpx;
  border: 1rpx solid #E6E6E6;
}

.join-btn {
  min-width: 140rpx;
}

.team-tip {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #888888;
  line-height: 1.6;
}

.member-list {
  margin-top: 16rpx;
  background: #F8FAFF;
  border: 1rpx solid #E6F0FF;
  border-radius: 12rpx;
  padding: 12rpx;
}

.member-title {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.member-item {
  font-size: 24rpx;
  color: #555555;
  padding: 6rpx 0;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.owner-tag {
  color: #D48806;
}


