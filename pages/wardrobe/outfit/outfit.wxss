/* pages/wardrobe/outfit/outfit.wxss */
.outfit-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

/* 虚拟人物区域 */
.avatar-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.avatar-placeholder {
  position: relative;
  width: 300rpx;
  height: 400rpx;
  margin: 0 auto;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 200rpx;
}

.selected-items-display {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.selected-item {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.selection-count {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #666;
}

/* 操作按钮 */
.action-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.action-btn.clear {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
}

.action-btn.save {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
}

/* 分类选择区 */
.categories-section {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  max-height: 600rpx;
}

.category-block {
  margin-bottom: 40rpx;
}

.category-block:last-child {
  margin-bottom: 0;
}

.category-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.category-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.category-count {
  font-size: 24rpx;
  color: #999;
}

.items-scroll {
  white-space: nowrap;
  height: 200rpx;
}

.item-chip {
  display: inline-block;
  width: 140rpx;
  margin-right: 20rpx;
  text-align: center;
  vertical-align: top;
}

.item-chip.selected {
  transform: scale(1.1);
  transition: transform 0.3s;
}

.chip-image,
.chip-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin: 0 auto 8rpx;
}

.chip-image {
  border: 4rpx solid transparent;
}

.item-chip.selected .chip-image {
  border-color: #667eea;
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.5);
}

.chip-placeholder {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  border: 4rpx solid transparent;
}

.item-chip.selected .chip-placeholder {
  border-color: #f5576c;
  box-shadow: 0 0 20rpx rgba(245, 87, 108, 0.5);
}

.chip-name {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

/* 已保存的搭配 */
.saved-outfits-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.outfits-scroll {
  white-space: nowrap;
  height: 160rpx;
}

.outfit-card {
  position: relative;
  display: inline-block;
  width: 200rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  margin-right: 20rpx;
  padding: 20rpx;
  vertical-align: top;
}

.outfit-name {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.outfit-count {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.delete-outfit {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 44rpx;
  height: 44rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 40rpx 30rpx;
}

.outfit-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
  background: #fff;
}

.modal-btn.cancel {
  color: #999;
  border-right: 1rpx solid #eee;
}

.modal-btn.confirm {
  color: #667eea;
  font-weight: 500;
}
