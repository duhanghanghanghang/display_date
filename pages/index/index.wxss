/* pages/index/index.wxss */

.container {
  padding: 20rpx;
  padding-bottom: 180rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F4FD 0%, #F5F5F5 30%);
}

/* 头部统计卡片 */
.header-card {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(74, 144, 226, 0.3);
}

.no-team {
  background: #FFF6E5;
  color: #D48806;
  border: 1rpx dashed #FFD666;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

.header-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 44rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

.stat-expired .stat-number {
  color: #FFB4B4;
}

.stat-warning .stat-number {
  color: #FFE4B4;
}

.reminder-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: right;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.filter-tab.active {
  background: #4A90E2;
  color: #FFFFFF;
  font-weight: 500;
}

/* 物品列表 */
.item-list {
  margin-bottom: 20rpx;
}

.item-card {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

.item-left {
  flex: 1;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.item-product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background: #F5F5F5;
}

.item-content {
  flex: 1;
  overflow: hidden;
}

.item-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.item-category-badge {
  display: inline-block;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.item-quantity {
  display: inline-flex;
  align-items: center;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 600;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.quantity-icon {
  font-size: 20rpx;
  margin-right: 2rpx;
}

.quantity-number {
  font-size: 22rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-date {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.date-icon {
  margin-right: 8rpx;
}

.item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 60rpx;
}

.days-remaining {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.status-tag {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
}

.push-tag {
  background: #f0f0f0;
  color: #666;
}

.delete-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  opacity: 0.6;
}

.delete-btn:active {
  opacity: 1;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
}

/* 编辑模态框 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 10%;
  left: 5%;
  right: 5%;
  bottom: 10%;
  background: #FFFFFF;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  animation: modalSlideIn 0.3s ease-out;
  box-sizing: border-box;
}

@keyframes modalSlideIn {
  from {
    top: 20%;
    opacity: 0;
  }
  to {
    top: 10%;
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 48rpx;
  color: #999999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.form-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.required {
  color: #FF4444;
  margin-right: 4rpx;
}

.form-input {
  display: block;
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.picker-arrow {
  font-size: 36rpx;
  color: #CCCCCC;
}

.form-textarea {
  display: block;
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.category-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 16rpx;
}

.category-tag {
  font-size: 24rpx;
  color: #666666;
  background: #F0F0F0;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.category-tag.active {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: #FFFFFF;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 28rpx;
}

.quantity-btn:active {
  opacity: 0.8;
}

.quantity-input {
  flex: 1;
  height: 60rpx;
  text-align: center;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.quantity-unit {
  font-size: 28rpx;
  color: #999999;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #F0F0F0;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.modal-btn-delete {
  background: #FFFFFF;
  color: #FF4444;
  border: 2rpx solid #FF4444;
}

.modal-btn-save {
  background: linear-gradient(135deg, #52C41A, #3FAD09);
  color: #FFFFFF;
}

.modal-btn:active {
  opacity: 0.8;
}
