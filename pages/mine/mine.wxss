.container {
  padding: var(--spacing-lg);
  min-height: 100vh;
  background: var(--bg-page);
}

.card {
  background: var(--bg-card);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-md);
}

.profile-card {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
}

.avatar {
  width: 20vw;
  height: 20vw;
  max-width: 120rpx;
  max-height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  color: #FFFFFF;
  font-size: 60rpx;
  backdrop-filter: blur(10rpx);
}

.profile-info {
  flex: 1;
}

.profile-info .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.profile-info .subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.5;
}

.setting-card {
  border: 2rpx solid var(--border-light);
}

.setting-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.setting-title {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 600;
}

.setting-value {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 500;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  padding: 8rpx 16rpx;
  border-radius: var(--radius-md);
}

.setting-tip {
  margin-top: var(--spacing-md);
  font-size: 26rpx;
  color: var(--text-secondary);
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--bg-page);
  border-radius: var(--radius-md);
}

.save-btn {
  margin-top: var(--spacing-lg);
}

.info-card {
  border: 2rpx solid var(--border-light);
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
}

.info-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.7;
  margin-bottom: var(--spacing-sm);
}

.test-btn, .subscribe-btn, .send-btn {
  margin-top: var(--spacing-md);
}

.team-card {
  border: 2rpx solid var(--border-light);
}

.team-header {
  display: flex;
  justify-content: space-between;
  gap: var(--spacing-sm);
  align-items: flex-start;
  margin-bottom: var(--spacing-md);
}

.team-name-input {
  flex: 1;
  min-height: 88rpx;
  border-radius: var(--radius-md);
  padding: 0 var(--spacing-lg);
  background: var(--bg-page);
  font-size: 30rpx;
  border: 2rpx solid var(--border-color);
}

.team-tabs {
  display: flex;
  background: var(--bg-page);
  border-radius: var(--radius-md);
  margin: var(--spacing-md) 0;
  overflow: hidden;
  padding: 4rpx;
  gap: 4rpx;
}

.team-tabs .tab {
  flex: 1;
  text-align: center;
  padding: var(--spacing-md) 0;
  font-size: 28rpx;
  color: var(--text-secondary);
  border-radius: var(--radius-sm);
  transition: all 0.3s ease;
}

.team-tabs .tab.active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15), rgba(118, 75, 162, 0.15));
  color: var(--primary-color);
  font-weight: 600;
}

.team-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.team-card-item {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
  border: 2rpx solid var(--border-light);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  transition: all 0.3s ease;
}

.team-card-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

.team-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.team-item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.team-item-role {
  font-size: 24rpx;
  color: var(--primary-color);
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
}

.team-item-row {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin: 6rpx 0;
  line-height: 1.5;
}

.team-item-actions {
  display: flex;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-md);
}

.empty-tip {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999999;
}

.team-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.team-subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
}

.team-actions {
  display: flex;
  gap: 12rpx;
}

.mini-btn {
  padding: var(--spacing-sm) var(--spacing-lg);
  font-size: 26rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  color: var(--primary-color);
  border-radius: var(--radius-md);
  font-weight: 500;
  transition: all 0.3s ease;
}

.mini-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.mini-btn.danger {
  background: linear-gradient(135deg, rgba(255, 77, 79, 0.1), rgba(238, 90, 90, 0.1));
  color: var(--error-color);
}

.team-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.invite-row {
  display: flex;
  gap: var(--spacing-sm);
  align-items: stretch;
}

.invite-input {
  flex: 1;
  min-height: 88rpx;
  border-radius: var(--radius-md);
  padding: 0 var(--spacing-lg);
  background: var(--bg-page);
  font-size: 30rpx;
  border: 2rpx solid var(--border-color);
}

.join-btn {
  min-width: 140rpx;
  flex-shrink: 0;
}

.team-tip {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #888888;
  line-height: 1.6;
}

.member-list {
  margin-top: 16rpx;
  background: #F8FAFF;
  border: 1rpx solid #E6F0FF;
  border-radius: 12rpx;
  padding: 12rpx;
}

.member-title {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.member-item {
  font-size: 24rpx;
  color: #555555;
  padding: 6rpx 0;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.owner-tag {
  color: #D48806;
}

/* 备案信息 */
.beian-container {
  margin-top: 40rpx;
  padding: 32rpx 24rpx;
  text-align: center;
}

.beian-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.beian-text {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.beian-hint {
  font-size: 22rpx;
  color: #999999;
}

.beian-tips {
  font-size: 20rpx;
  color: #AAAAAA;
  line-height: 1.6;
  padding: 0 20rpx;
}

/* 通用按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.btn-success {
  background: linear-gradient(135deg, var(--success-color), #3FAD09);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(82, 196, 26, 0.3);
}

