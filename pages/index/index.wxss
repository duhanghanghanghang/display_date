/* pages/index/index.wxss */

.container {
  padding: 20rpx;
  padding-bottom: 180rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F4FD 0%, #F5F5F5 30%);
}

/* 头部统计卡片 */
.header-card {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(74, 144, 226, 0.3);
}

.no-team {
  background: #FFF6E5;
  color: #D48806;
  border: 1rpx dashed #FFD666;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

.header-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 44rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
}

.stat-expired .stat-number {
  color: #FFB4B4;
}

.stat-warning .stat-number {
  color: #FFE4B4;
}

.reminder-tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: right;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #666666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.filter-tab.active {
  background: #4A90E2;
  color: #FFFFFF;
  font-weight: 500;
}

/* 物品列表 */
.item-list {
  margin-bottom: 20rpx;
}

.item-card {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  gap: 20rpx;
  min-height: 140rpx;
}

/* 左侧图片区域 */
.item-image-wrapper {
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
  border-radius: 16rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #F5F7FA 0%, #E8EBF0 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.item-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  font-size: 48rpx;
  opacity: 0.3;
}

/* 中间内容区域 */
.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 10rpx;
  overflow: hidden;
  min-height: 120rpx;
}

.item-name-wrapper {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  flex: 1;
}

.item-quantity-inline {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  min-width: 44rpx;
  height: 28rpx;
  box-shadow: 0 2rpx 6rpx rgba(102, 126, 234, 0.3);
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.item-category-inline {
  display: inline-block;
  font-size: 20rpx;
  color: #667EEA;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.item-date-inline {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999999;
  flex-shrink: 0;
}

.date-icon-small {
  font-size: 18rpx;
  margin-right: 4rpx;
}

/* 右侧状态区域 */
.item-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  gap: 10rpx;
  margin-right: 60rpx;
  flex-shrink: 0;
  min-width: 80rpx;
}

.days-remaining {
  font-size: 34rpx;
  font-weight: 700;
  line-height: 1;
  white-space: nowrap;
}

.status-tag-compact {
  font-size: 20rpx;
  padding: 6rpx 14rpx;
  border-radius: 14rpx;
  font-weight: 500;
  white-space: nowrap;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.push-tag-compact {
  font-size: 20rpx;
  padding: 6rpx 14rpx;
  border-radius: 14rpx;
  background: #F5F7FA;
  color: #8892A0;
  font-weight: 500;
  white-space: nowrap;
}

.delete-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  opacity: 0.6;
}

.delete-btn:active {
  opacity: 1;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-top: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
}

/* 编辑模态框 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 10%;
  left: 5%;
  right: 5%;
  bottom: 10%;
  background: #FFFFFF;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  animation: modalSlideIn 0.3s ease-out;
  box-sizing: border-box;
}

@keyframes modalSlideIn {
  from {
    top: 20%;
    opacity: 0;
  }
  to {
    top: 10%;
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.modal-close {
  font-size: 48rpx;
  color: #999999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.form-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.required {
  color: #FF4444;
  margin-right: 4rpx;
}

.form-input {
  display: block;
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  padding: 0 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.picker-arrow {
  font-size: 36rpx;
  color: #CCCCCC;
}

.form-textarea {
  display: block;
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333333;
  box-sizing: border-box;
}

.category-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.category-tag {
  font-size: 26rpx;
  color: #606266;
  background: #F5F7FA;
  padding: 14rpx 28rpx;
  border-radius: 40rpx;
  border: 2rpx solid #DCDFE6;
  transition: all 0.3s ease;
  font-weight: 500;
}

.category-tag:active {
  transform: scale(0.95);
}

.category-tag.active {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  color: #FFFFFF;
  border-color: transparent;
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.4);
  transform: translateY(-2rpx);
  font-weight: 600;
}

/* 模态框图片上传 */
.modal-image-upload {
  display: flex;
  justify-content: center;
  margin-top: 12rpx;
}

.modal-image-preview {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.modal-uploaded-image {
  width: 100%;
  height: 100%;
}

.modal-image-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 300;
}

.modal-upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #667EEA;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
  transition: all 0.3s ease;
}

.modal-upload-btn:active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  transform: scale(0.98);
}

.modal-upload-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  opacity: 0.6;
}

.modal-upload-text {
  font-size: 24rpx;
  color: #667EEA;
  font-weight: 500;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 28rpx;
}

.quantity-btn:active {
  opacity: 0.8;
}

.quantity-input {
  flex: 1;
  height: 60rpx;
  text-align: center;
  background: #F8F8F8;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.quantity-unit {
  font-size: 28rpx;
  color: #999999;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #F0F0F0;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.modal-btn-delete {
  background: #FFFFFF;
  color: #FF4444;
  border: 2rpx solid #FF4444;
}

.modal-btn-save {
  background: linear-gradient(135deg, #52C41A, #3FAD09);
  color: #FFFFFF;
}

.modal-btn:active {
  opacity: 0.8;
}
